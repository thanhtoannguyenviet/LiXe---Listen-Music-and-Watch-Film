<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Server.model.DB.CommentEntity" table="comment" schema="public" catalog="test12345">
        <id name="id">
            <column name="id" sql-type="bigint"/><generator class="identity"/>

        </id>
        <property name="content">
            <column name="content" sql-type="varchar(500)" length="500"/>
        </property>
        <property name="commentdate">
            <column name="commentdate" sql-type="timestamp"/>
        </property>
        <property name="model">
            <column name="model" sql-type="varchar(255)"/>
        </property>
        <property name="entryid">
            <column name="entryid" sql-type="bigint"/>
        </property>
        <property name="usernamecomment">
            <column name="usernamecomment" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>